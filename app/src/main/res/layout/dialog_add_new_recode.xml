<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="14dp"
        android:layout_weight="0.02" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:background="@color/temple_header_color"
        android:text="选择车号：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="195dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/spinner2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:textColor="#000"
        android:gravity="center|left"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:background="@color/temple_header_color"
        android:text="巡检记录:" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#000"
        android:background="@color/temple_header_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请按照顺序依次拍摄巡检照片：" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.example.peisw.hfgdgdctx.utils.DrawTextImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_green"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="提交" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_yellow"
            android:text="取消"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
