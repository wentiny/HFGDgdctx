<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title1"
        layout="@layout/user_title_bar"
        android:layout_height="36dp"
        android:layout_width="match_parent"></include>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:text="" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <view
            class="android.support.v4.widget.Space"
            id="@+id/view"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button3"
            android:background="@color/text_avgpre"
            android:textColor="#000"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="工区未审核" />

        <view
            class="android.support.v4.widget.Space"
            id="@+id/view2"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button4"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:background="@color/orange_deep"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="车间未审核" />

        <view
            class="android.support.v4.widget.Space"
            id="@+id/view3"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button5"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:background="@color/green_3dbf53"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="已审核" />

        <view
            class="android.support.v4.widget.Space"
            id="@+id/view4"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button6"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="11dp"
            android:background="@color/red_f23a3a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="退回" />

        <view
            class="android.support.v4.widget.Space"
            id="@+id/view5"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="按时间段搜索:"
            android:textColor="#000"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/shape_btn_yellow"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="起始日期" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="至" />

        <Button
            android:id="@+id/button21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/shape_btn_yellow"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="截止日期" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <view
            class="android.support.v4.widget.Space"
            id="@+id/viewvv2"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/shape_btn_green"
            android:text="查询" />

        <view
            class="android.support.v4.widget.Space"
            id="@+id/viewvv1"
            layout_weight="1"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView53"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/tablelayoutbian"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="状态" />
        <TextView
            android:id="@+id/textView52"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/tablelayoutbian"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="车号/编号" />
        <TextView
            android:id="@+id/textView51"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/tablelayoutbian"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="人员/日期" />
        <TextView
            android:id="@+id/textView50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/tablelayoutbian"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="审核意见" />
        <TextView
            android:id="@+id/textView49"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/tablelayoutbian"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="操作" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp" />

</LinearLayout>
